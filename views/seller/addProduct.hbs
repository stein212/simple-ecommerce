<div class="container">
    <h1>Add Product</h1>

    <form action="/Seller/AddProduct" method="post">
        <div class="form-group">
            <label>Product Name</label>
            <input name="name" type="text" class="form-control" placeholder="Best product">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input name="price" type="text" class="form-control" placeholder="123.50">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>